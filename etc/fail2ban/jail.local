[DEFAULT]
bantime  = 3600

sendername = Fail2Ban
sender = fail2ban@mydomain.com
destemail = alerts@mydomain.com

[sshd]
enabled  = true
action = %(action_mw)s

#If you have issues with postfix jails not being detected, try adding "backend = systemd" 
[postfix]
enabled  = true
logpath  = /var/log/mail.log
maxretry = 6
action = %(action_mw)s

[postfix-sasl]
enabled  = true
logpath  = /var/log/mail.log
maxretry  = 3
action = %(action_mw)s
